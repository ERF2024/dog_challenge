<?xml version="1.0" encoding="utf-8"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro">  
  <xacro:macro name="map_part" params="handle parent position orientation course">

  <joint name="map_part${handle}_joint" type="fixed">
    <origin xyz="${position}" rpy="${orientation}"/>
    <parent link="${parent}"/>
    <child link="map_part${handle}"/>
  </joint>

    <link
      name="map_part${handle}">
      
      <inertial>
        <origin xyz="0 0 0.5" rpy="0 0 0"/>
        <mass value="1"/>
        <inertia
      ixx="1.0" ixy="0.0" ixz="0.0"
      iyy="1.0" iyz="0.0"
      izz="1.0"/>
      </inertial>
      
      <visual>
        <origin
          xyz="0 0 0"
          rpy="0 0 0" />
        <geometry>
          <mesh
            filename="package://ERFDogChallenge/meshes/part/map_${course}.dae"/>
        </geometry>
        <material name="">
          <color rgba="1.0 0.41 0.41 1" />
        </material>
      </visual>
      <collision>
        <origin
          xyz="0 0 0"
          rpy="0 0 0" />
        <geometry>
          <mesh
            filename="package://ERFDogChallenge/meshes/part/map_${course}.dae"/>
        </geometry>
        <material name="">
          <!-- <color rgba="1 0 0 1" />-->
        </material>
      </collision>
    </link>

    <gazebo reference="map_part${handle}">
      <material>Gazebo/Wood</material>
      <static>true</static>
    </gazebo>

  </xacro:macro>
</robot>
